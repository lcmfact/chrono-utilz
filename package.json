{
  "name": "@mfuon2/chrono-utilz",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "sideEffects": false,
  "version": "1.0.6",
  "description": "A lightweight, high-performance date utility library for JavaScript and TypeScript",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "date",
    "time",
    "datetime",
    "utility",
    "timezone",
    "calendar",
    "formatting",
    "parsing",
    "lightweight",
    "typescript",
    "date-utils"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "test": "mocha -r ts-node/register 'tests/**/*.test.ts'",
    "test:ci": "mocha -r ts-node/register 'tests/**/*.test.ts' --reporter mocha-json-output-reporter --reporter-options output=report/json/result.json",
    "coverage": "nyc --reporter=lcov npm test",
    "lint": "eslint 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run test:ci && npm run build"
  },
  "mochaJunitReporterReporterOptions": {
    "mochaFile": "results/test-results.xml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mfuon2/chrono-utilz.git"
  },
  "bugs": {
    "url": "https://github.com/Mfuon2/chrono-utilz/issues"
  },
  "homepage": "https://github.com/Mfuon2/chrono-utilz#readme",
  "author": "Leonard Mfuon <mfuoon@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.16.0",
    "@types/sinon": "^10.0.15",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "chai": "^4.3.7",
    "eslint": "^8.57.1",
    "globals": "^16.1.0",
    "mocha": "^10.2.0",
    "mocha-json-output-reporter": "^2.1.0",
    "nyc": "^15.1.0",
    "sinon": "^15.0.4",
    "ts-node": "^10.9.1",
    "tsup": "^8.4.0",
    "typescript": "^5.0.4",
    "typescript-eslint": "^8.32.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
